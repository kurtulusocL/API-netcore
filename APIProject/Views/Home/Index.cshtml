@model IEnumerable<APIProject.Models.Product>
@{
    Layout = null;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link href="/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mg-2">
        <hr /><strong>Ürü Listesi</strong><br />
        <a href="~/Home/Create" class="btn btn-primary btn-sm">Yeni Ürün Ekle</a>
       <br />
        <div class="row">
            <table class="table table-hover table-striped table-bordered table-sm">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Adı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="~/Home/Detail/@item.Id" class="btn btn-info btn-sm">Detay</a>
                                @*<a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-success btn-sm">Güncelle</a>*@
                                <a href="~/Home/Edit/@item.Id" class="btn btn-success btn-sm">Güncelle</a>
                                <a href="~/Home/Delete/@item.Id" onclick="return confirm('Emin Misiniz ?')" class="btn btn-danger btn-sm">Sil</a>
                            </td>
                        </tr>
                    }
            </table>
        </div>
    </div>
</body>
</html>